---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Calendar from "@lucide/astro/icons/calendar";
import {getCollection, render} from 'astro:content';

export async function getStaticPaths() {
    const services = await getCollection('services');
    return services.map(service => ({
        params: {slug: service.slug},
        props: {service},
    }));
}

const {service} = Astro.props;
const {Content} = await render(service);
---

<BaseLayout title={service.data.title} description={service.data.description}
            keywords={service.data.features.map(feature => feature.toLowerCase()).join(', ')}>
    <main class="py-12 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 bg-black">
        <div class="bg-gray-900 border border-gray-700 p-8">
            <h1 class="text-4xl font-bold text-gray-100 mb-6 uppercase tracking-tight">{service.data.title}</h1>
            <div class="text-gray-300 leading-snug space-y-6">
                <Content/>
            </div>
        </div>
        <div class="text-center mt-16">
            <div class="bg-gray-900 border border-gray-700 p-8">
                <h3 class="text-2xl font-bold mb-4 text-gray-100 uppercase tracking-tight">READY TO TRANSFORM YOUR IT INFRASTRUCTURE?</h3>
                <p class="text-gray-300 mb-6 max-w-2xl mx-auto leading-snug">
                    Our expert team is ready to assess your current setup and provide tailored solutions for your
                    business needs.
                </p>
                <a
                        href="/contact"
                        class="bg-orange-700 text-black border border-orange-800 px-8 py-3 rounded-none font-medium hover:bg-orange-800 hover:text-white transition-colors duration-150 inline-flex items-center gap-2"
                >
                    SCHEDULE CONSULTATION
                    <Calendar class="w-5 h-5"/>
                </a>
            </div>
        </div>
    </main>
</BaseLayout>