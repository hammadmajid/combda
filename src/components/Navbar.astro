---
import Menu from "@lucide/astro/icons/menu";
---

<nav class="bg-gray-950 border-b border-gray-700">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo and Company Name -->
            <div class="flex items-center">
                <a href="/" class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-orange-600 rounded-none flex items-center justify-center">
                        <span class="text-black font-bold text-lg">C</span>
                    </div>
                    <span class="text-2xl font-bold text-gray-100 uppercase tracking-tight">COMBDA</span>
                </a>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:block">
                <div class="ml-10 flex items-baseline space-x-8">
                    <a href="/#services"
                       class="text-gray-200 hover:text-orange-600 underline px-3 py-2 text-sm font-medium transition-colors duration-150">
                        SERVICES
                    </a>
                    <a href="/about"
                       class="text-gray-200 hover:text-orange-600 underline px-3 py-2 text-sm font-medium transition-colors duration-150">
                        ABOUT
                    </a>
                    <a href="/#faq"
                       class="text-gray-200 hover:text-orange-600 underline px-3 py-2 text-sm font-medium transition-colors duration-150">
                        FAQ
                    </a>
                    <a href="/contact"
                       class="bg-orange-700 text-black border border-orange-800 px-4 py-2 rounded-none text-sm font-medium hover:bg-orange-800 hover:text-white transition-colors duration-150">
                        CONTACT US
                    </a>
                </div>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button
                        type="button"
                        class="bg-gray-900 inline-flex items-center justify-center p-2 rounded-none text-orange-600 hover:text-orange-800 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-orange-500"
                        aria-controls="mobile-menu"
                        aria-expanded="false"
                        id="mobile-menu-button"
                >
                    <span class="sr-only">Open main menu</span>
                    <!-- Menu icon -->
                    <Menu/>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-gray-950 border-t border-gray-700">
            <a href="/#services" class="text-gray-200 hover:text-orange-600 underline block px-3 py-2 text-base font-medium">
                SERVICES
            </a>
            <a href="/about" class="text-gray-200 hover:text-orange-600 underline block px-3 py-2 text-base font-medium">
                ABOUT
            </a>
            <a href="/#faq" class="text-gray-200 hover:text-orange-600 underline block px-3 py-2 text-base font-medium">
                FAQ
            </a>
            <a href="/contact"
               class="bg-orange-700 text-black border border-orange-800 block px-3 py-2 rounded-none text-base font-medium hover:bg-orange-800 hover:text-white transition-colors duration-150 mx-3 my-2">
                CONTACT US
            </a>
        </div>
    </div>
</nav>

<script>
    // Mobile menu toggle
    document.addEventListener('DOMContentLoaded', function () {
        const button = document.getElementById('mobile-menu-button');
        const menu = document.getElementById('mobile-menu');

        if (button && menu) {
            button.addEventListener('click', function () {
                menu.classList.toggle('hidden');
                const isExpanded = button.getAttribute('aria-expanded') === 'true';
                button.setAttribute('aria-expanded', (!isExpanded).toString());
            });
        }
    });
</script>
