---
import Server from "@lucide/astro/icons/server";
import CloudIcon from "@lucide/astro/icons/cloud";
import ShieldIcon from "@lucide/astro/icons/shield";
import Wifi from "@lucide/astro/icons/wifi";
import Cog from "@lucide/astro/icons/cog";
import Database from "@lucide/astro/icons/database";
import RotateCcw from "@lucide/astro/icons/rotate-ccw";
import ArrowRight from "@lucide/astro/icons/chevron-right";
import Calendar from "@lucide/astro/icons/calendar";

import {getCollection} from "astro:content";

const iconMap = {
    "server": Server,
    "cloud": CloudIcon,
    "shield": ShieldIcon,
    "wifi": Wifi,
    "cog": Cog,
    "database": Database,
    "rotate-ccw": RotateCcw
};

const services = (await getCollection("services"));
---

<section id="services" class="py-20 bg-black">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 space-y-6">
            <h2 class="text-4xl font-bold text-gray-100 tracking-tight uppercase">
                <span class="text-orange-600">admin@combda:~$</span> ls -la
                <span class="text-orange-600">IT_SERVICES/</span>
            </h2>
            <p class="text-lg text-gray-200 max-w-3xl mx-auto leading-snug">
                Comprehensive IT solutions designed to accelerate your business growth and digital transformation
                journey.
            </p>
        </div>

        <!-- Services Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {services.map((service) => {
                const data = service.data;
                const IconComponent = iconMap[data.icon] ?? Server;
                return (
                        <a
                            href={`/services/${(service.slug)}`}
                            class="bg-gray-900 border border-gray-700 p-8 hover:bg-gray-800 hover:border-orange-600 transition-colors duration-150 block group"
                        >
                            <!-- Icon -->
                            <div class="flex justify-center mb-6">
                                <div class="w-16 h-16 bg-gray-800 border border-gray-700 rounded-none flex items-center justify-center group-hover:border-orange-600 transition-colors duration-150">
                                    <IconComponent class="w-8 h-8 text-orange-600"/>
                                </div>
                            </div>

                            <!-- Title -->
                            <h3 class="text-2xl font-bold text-gray-100 mb-4 text-center uppercase tracking-tight">
                                {data.title}
                            </h3>

                            <!-- Description -->
                            <p class="text-gray-300 mb-6 leading-snug text-center">
                                {data.description}
                            </p>

                            <!-- Features -->
                            <ul class="space-y-2 mb-6">
                                {data.features.map((feature) => (
                                        <li class="flex items-center text-sm text-gray-300 leading-snug">
                                            <span class="text-orange-600 mt-2 mr-3 flex-shrink-0">├──</span>
                                            {feature}
                                        </li>
                                ))}
                            </ul>

                            <!-- CTA -->
                            <div class="text-center">
                                <span class="inline-flex items-center text-orange-600 group-hover:text-orange-800 underline font-medium text-sm transition-colors duration-150">
                                    LEARN MORE
                                    <ArrowRight class="w-4 h-4 ml-1"/>
                                </span>
                            </div>
                        </a>
                );
            })}
        </div>

        <!-- Call to Action -->
        <div class="text-center mt-16">
            <div class="bg-gray-900 border border-gray-700 p-8">
                <h3 class="text-2xl font-bold mb-4 text-gray-100 uppercase tracking-tight">READY TO TRANSFORM YOUR IT INFRASTRUCTURE?</h3>
                <p class="text-gray-300 mb-6 max-w-2xl mx-auto leading-snug">
                    Our expert team is ready to assess your current setup and provide tailored solutions for your
                    business needs.
                </p>
                <a
                        href="/contact"
                        class="bg-orange-700 text-black border border-orange-800 px-8 py-3 rounded-none font-medium hover:bg-orange-800 hover:text-white transition-colors duration-150 inline-flex items-center gap-2 terminal-cursor"
                >
                    SCHEDULE CONSULTATION
                    <Calendar class="w-5 h-5"/>
                </a>
            </div>
        </div>
    </div>
</section>
