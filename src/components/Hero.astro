---
import ShieldIcon from "@lucide/astro/icons/shield";
import CloudIcon from "@lucide/astro/icons/cloud";
import Cog from "@lucide/astro/icons/cog";
---

<section class="py-20 lg:py-32 bg-black">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <!-- Main Headline -->
            <h1 class="text-4xl font-bold text-gray-100 mb-6 tracking-tight leading-snug">
                <span class="text-orange-600">user@combda:~$</span> ./transform-business --with=<span class="text-orange-600">expert</span>
            </h1>

            <!-- Subheadline -->
            <p class="text-lg text-gray-200 mb-8 max-w-3xl mx-auto leading-snug">
                From infrastructure setup to cloud migration, cybersecurity to DevOps automation—we provide
                comprehensive IT services that drive growth and innovation.
            </p>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
                <a
                        href="/contact"
                        class="bg-orange-700 text-black border border-orange-800 px-8 py-4 rounded-none text-lg font-medium hover:bg-orange-800 hover:text-white transition-colors duration-150 flex items-center gap-2"
                >
                    GET STARTED TODAY
                    <span class="cursor-blink text-orange-600">█</span>
                </a>
                <a
                        href="/#services"
                        class="bg-gray-900 text-orange-600 border border-gray-700 px-8 py-4 rounded-none text-lg font-medium hover:bg-gray-800 transition-colors duration-150"
                >
                    EXPLORE SERVICES
                </a>
            </div>

            <!-- Feature Icons -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
                <div class="bg-gray-900 border border-gray-700 p-6">
                    <div class="flex justify-center mb-4">
                        <div class="w-12 h-12 bg-gray-800 border border-gray-700 rounded-none flex items-center justify-center">
                            <ShieldIcon class="w-6 h-6 text-orange-600"/>
                        </div>
                    </div>
                    <h3 class="text-lg font-bold text-gray-100 mb-2 uppercase tracking-tight">CYBERSECURITY EXCELLENCE</h3>
                    <p class="text-gray-300 text-sm leading-snug">Advanced security solutions and compliance audits to protect your
                        business assets.</p>
                </div>

                <div class="bg-gray-900 border border-gray-700 p-6">
                    <div class="flex justify-center mb-4">
                        <div class="w-12 h-12 bg-gray-800 border border-gray-700 rounded-none flex items-center justify-center">
                            <CloudIcon class="w-6 h-6 text-orange-600"/>
                        </div>
                    </div>
                    <h3 class="text-lg font-bold text-gray-100 mb-2 uppercase tracking-tight">CLOUD MIGRATION</h3>
                    <p class="text-gray-300 text-sm leading-snug">Seamless cloud transitions with optimized hosting solutions for
                        modern businesses.</p>
                </div>

                <div class="bg-gray-900 border border-gray-700 p-6">
                    <div class="flex justify-center mb-4">
                        <div class="w-12 h-12 bg-gray-800 border border-gray-700 rounded-none flex items-center justify-center">
                            <Cog class="w-6 h-6 text-orange-600"/>
                        </div>
                    </div>
                    <h3 class="text-lg font-bold text-gray-100 mb-2 uppercase tracking-tight">DEVOPS AUTOMATION</h3>
                    <p class="text-gray-300 text-sm leading-snug">Streamlined development processes and infrastructure automation for
                        efficiency.</p>
                </div>
            </div>
        </div>
    </div>
</section>
