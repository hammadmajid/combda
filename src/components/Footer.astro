---
import AtSign from "@lucide/astro/icons/at-sign";
import PhoneIcon from "@lucide/astro/icons/phone";
import MapPin from "@lucide/astro/icons/map-pin";
import Send from "@lucide/astro/icons/send";

import {getCollection} from "astro:content";

const services = (await getCollection("services"));
---

<footer id="contact" class="bg-gray-950 text-gray-100 py-16 border-t border-gray-700">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">

            <!-- Company Info -->
            <div class="lg:col-span-2">
                <div class="flex items-center mb-6">
                    <pre class="text-orange-600 text-sm leading-none mr-4">
┌─┐
│C│
└─┘</pre>
                    <span class="text-2xl font-bold uppercase tracking-tight">COMBDA</span>
                </div>
                <p class="text-gray-300 mb-6 leading-snug max-w-md">
                    Your trusted partner for comprehensive IT solutions. We transform businesses through innovative
                    technology services, from infrastructure setup to cloud migration and cybersecurity.
                </p>
                <div class="space-y-3">
                    <div class="flex items-center">
                        <AtSign class="w-5 h-5 text-orange-600 mr-3"/>
                        <code class="bg-gray-800 px-2 py-1 text-orange-400 text-sm">
                            <a href="mailto:info@combda.site"
                               class="hover:text-orange-300 transition-colors duration-150">
                                ssh admin@combda.site
                            </a>
                        </code>
                    </div>
                    <div class="flex items-center">
                        <PhoneIcon class="w-5 h-5 text-orange-600 mr-3"/>
                        <code class="bg-gray-800 px-2 py-1 text-orange-400 text-sm">
                            <a href="tel:+1234567890"
                               class="hover:text-orange-300 transition-colors duration-150">
                                curl tel://+1-234-567-8900
                            </a>
                        </code>
                    </div>
                    <div class="flex items-center">
                        <MapPin class="w-5 h-5 text-orange-600 mr-3"/>
                        <code class="bg-gray-800 px-2 py-1 text-orange-400 text-sm">
                            ping remote.combda.site
                        </code>
                    </div>
                </div>
            </div>

            <!-- Services -->
            <div>
                <h3 class="text-lg font-bold mb-6 text-orange-600 uppercase tracking-tight">OUR SERVICES</h3>
                <ul class="space-y-3">
                    {services.map((service) => {
                        return (
                                <li>
                                    <a href={`/services/${service.slug}`}
                                       class="text-gray-300 hover:text-orange-600 underline transition-colors duration-150 text-sm">
                                        {service.data.title}
                                    </a>
                                </li>
                        )
                    })}
                </ul>
            </div>

            <!-- Quick Links -->
            <div>
                <h3 class="text-lg font-bold mb-6 text-orange-600 uppercase tracking-tight">QUICK LINKS</h3>
                <ul class="space-y-3">
                    <li>
                        <a href="/#services"
                           class="text-gray-300 hover:text-orange-600 underline transition-colors duration-150 text-sm">
                            OUR SERVICES
                        </a>
                    </li>
                    <li>
                        <a href="/#faq"
                           class="text-gray-300 hover:text-orange-600 underline transition-colors duration-150 text-sm">
                            FAQ
                        </a>
                    </li>
                    <li>
                        <a href="/contact"
                           class="text-gray-300 hover:text-orange-600 underline transition-colors duration-150 text-sm">
                            CONTACT US
                        </a>
                    </li>
                    <li>
                        <a href="/privacy"
                           class="text-gray-300 hover:text-orange-600 underline transition-colors duration-150 text-sm">
                            PRIVACY POLICY
                        </a>
                    </li>
                    <li>
                        <a href="/terms"
                           class="text-gray-300 hover:text-orange-600 underline transition-colors duration-150 text-sm">
                            TERMS OF SERVICE
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Contact CTA -->
        <div class="mt-16 pt-8 border-t border-gray-700">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
                <div>
                    <h3 class="text-2xl font-bold mb-2 text-orange-600 uppercase tracking-tight">READY TO DISCUSS YOUR PROJECT?</h3>
                    <p class="text-gray-300 leading-snug">Reach out and our team will get back to you promptly.</p>
                </div>
                <a href="/contact"
                   class="bg-orange-700 text-black border border-orange-800 px-6 py-3 rounded-none font-medium hover:bg-orange-800 hover:text-white transition-colors duration-150 inline-flex items-center gap-2">
                    CONTACT US
                    <span class="cursor-blink text-orange-600">█</span>
                </a>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="mt-12 pt-8 border-t border-gray-700 flex flex-col sm:flex-row justify-between items-center">
            <p class="text-gray-400 text-sm">
                © 2025 COMBDA. ALL RIGHTS RESERVED.
            </p>
            <div class="flex items-center space-x-6 mt-4 sm:mt-0">
                <a href="/privacy" class="text-gray-400 hover:text-orange-600 underline text-sm transition-colors duration-150">
                    PRIVACY POLICY
                </a>
                <a href="/terms" class="text-gray-400 hover:text-orange-600 underline text-sm transition-colors duration-150">
                    TERMS OF SERVICE
                </a>
            </div>
        </div>
    </div>
</footer>
